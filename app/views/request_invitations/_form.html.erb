<section id="forms">
  <div class="page-header">
    <h1>申请邀请码</h1>
  </div>
  <div class="row">
    <%= form_for(@request_invitation) do |f| %>
    <fieldset>
      <div class="clearfix">
        <label for="text_field">姓名</label>
        <div class="input">
          <%= f.text_field :name, :class => 'xlarge' %>
        </div>
      </div>
      <div class="clearfix">
        <label for="text_field">邮箱</label>
        <div class="input">
          <%= f.text_field :email, :class => 'xlarge' %>
        </div>
      </div>
      <div class="clearfix">
        <label for="text_field">个人简介</label>
        <div class="input">
          <%= f.text_area :description, :rows => 3, :class => 'xlarge' %>
        </div>
      </div>
      <div class="actions blank">
        <%= f.submit '提交申请', :class => "btn primary" %>
      </div>
    </fieldset>
    <% end %>
  </div>
</section>