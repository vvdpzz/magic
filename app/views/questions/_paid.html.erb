<%= div_for question do %>
  <div class="status">
    <div class="square"><div class="count"><%= question.credit %></div>元</div>
    <div class="square"><div class="count"><%= question.reputation %></div>积分</div>
  </div>
  <div class="summary">
    <div class="excerpt"><h5><a href="/questions/<%= question.id %>"><%= question.title %></a></h5></div>
    <div class="timestamp"><%= question.answers_count %> 回答，<%= time_ago_in_words question.created_at %></div>
  </div>
<% end %>
